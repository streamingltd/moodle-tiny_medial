{{!
    @template mod_helixmedia/container

    Content selection iframe launches.

    Example context (json):
    {"audioonly": false, "preid": 100, "url": "https://medial.com"}
}}
<div class='embed-responsive {{^audioonly}}embed-responsive-16by9{{/audioonly}} helixmedia_embedheight'
    {{#audioonly}}style='height:100px'{{/audioonly}} id='mediallaunch-{{preid}}'>
    <iframe class='embed-responsive-item overflow-auto border-0' src='{{url}}' allow='fullscreen;'
        sandbox='allow-scripts'></iframe>
</div>
